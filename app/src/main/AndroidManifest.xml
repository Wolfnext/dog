<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gacode.dog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dog"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.search.SearchActivity"></activity>
        <activity android:name=".view.profile.services.ServicesActivity" />
        <activity android:name=".view.profile.dogs.DogsActivity" />
        <activity android:name=".view.profile.update.UpdateProfileActivity" />
        <activity android:name=".view.auth.changePassword.ChangePasswordActivity" />
        <activity android:name=".view.auth.activation.ActiveAccountActivity" />
        <activity android:name=".view.auth.forget.ForgetActivity" />
        <activity android:name=".view.auth.register.RegisterActivity" />
        <activity
            android:name=".view.splash.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Dog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.auth.login.LoginActivity" />
        <activity android:name=".view.home.HomeActivity" />
    </application>

</manifest>